<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="vdw.sphinxsearch.indexer.class">Vdw\SphinxsearchBundle\Services\Indexer\Indexer</parameter>
        <parameter key="vdw.sphinxsearch.search.class">Vdw\SphinxsearchBundle\Services\Search\Sphinxsearch</parameter>
    </parameters>

    <services>
        <service id="vdw.sphinxsearch.indexer" class="%vdw.sphinxsearch.indexer.class%">
            <argument>%search.sphinxsearch.indexer.bin%</argument>
            <argument>%search.sphinxsearch.indexes%</argument>
        </service>

        <service id="vdw.sphinxsearch.search" class="%vdw.sphinxsearch.search.class%">
            <argument>%search.sphinxsearch.searchd.host%</argument>
            <argument>%search.sphinxsearch.searchd.port%</argument>
            <argument>%search.sphinxsearch.searchd.socket%</argument>
            <argument>%search.sphinxsearch.indexes%</argument>
        </service>
    </services>
</container>
